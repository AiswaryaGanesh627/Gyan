<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
            android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/note1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are really glad to hear your words!!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/tv_feedback"

        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/qn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How well do you find this app useful?"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/note1"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/bar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:theme="@style/AppThemeRatingBar"
        android:rating="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/qn1"/>
    <TextView
        android:id="@+id/qn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How would you rate this app?"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/bar1"
        android:theme="@style/AppThemeRatingBar"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/bar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:rating="0.0"
        android:theme="@style/AppThemeRatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/qn2"/>

    <TextView
        android:id="@+id/qn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like a daily quiz?"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/bar2"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/bar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:rating="0.0"
        android:theme="@style/AppThemeRatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/qn3"/>

    <TextView
        android:id="@+id/qn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is the app user-friendly?"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/bar3"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/bar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:rating="0.0"
        android:theme="@style/AppThemeRatingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/qn4"/>
    <TextView
        android:id="@+id/qn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How would you rate the difficulty level of questions?"
        android:layout_below="@id/bar4"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"

        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/bar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:rating="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:theme="@style/AppThemeRatingBar"
        android:layout_below="@id/qn5"/>
    <TextView
        android:id="@+id/sug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop in your suggestions"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/bar5"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/et_sug"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Type in"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="100dp"
        android:padding="15dp"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical"
        android:fontFamily="@font/roboto_regular"
        android:layout_below="@id/sug"
        android:background="@drawable/et_custom"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btn_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_sug"
        android:background="@drawable/btn_custom"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@android:color/white"
        android:text="SUBMIT"/>

        </RelativeLayout>

</ScrollView>



</RelativeLayout>